
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 p-0 m-0 sidebar">
        {{>sidebar-admin}}
        </div>
        {{admins}}
        <div class="col-md-9 mt-5 text-center">
           <section id="contact">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">Een fout melden</h2>
            <p>Beschrijf de fout zo duidelijk mogelijk en vermeld alle details.</p>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <form  method="POST" action="/error">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group wow fadeIn" data-wow-delay="0">
                    <input class="form-control"  type="text" name="name" placeholder="Naam *" required="required" data-validation-required-message="Please enter your name.">
                    <p class="help-block text-danger"></p>
                  </div>
                  <div class="form-group  wow fadeIn" data-wow-delay="0.10">
                    <input class="form-control"  type="email" name="email" placeholder="E-mail waarmee je inlogt *" required="required" data-validation-required-message="Please enter your email address.">
                    <p class="help-block text-danger"></p>
                  </div>
                  <div class="form-group  wow fadeIn" data-wow-delay="0.20">
                    <input class="form-control"  type="tel" name="error" placeholder="Foutcode (indien beschikbaar)" required="required" data-validation-required-message="Please enter your phone number.">
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <div class="col-md-6">
                   <div class="form-group wow fadeIn" data-wow-delay="0">
                    <input class="form-control"  type="text" name="intent" placeholder="Wat probeerde u te doen?" required="required" data-validation-required-message="Please enter your name.">
                    <p class="help-block text-danger"></p>
                  </div>
                  <div class="form-group  wow fadeIn" data-wow-delay="0.10">
                    <input class="form-control"  type="text" name="url" placeholder="URL (voorbeeld : https://www.uwwinkel.nl/login)" required="required" data-validation-required-message="Please enter your email address.">
                    <p class="help-block text-danger"></p>
                  </div>
                  <div class="form-group  wow fadeIn" data-wow-delay="0.20">
                    <input class="form-control"  type="media" name="freq" placeholder="Frequentie van fout" required="required" data-validation-required-message="Please enter your phone number.">
                    <p class="help-block text-danger"></p>
                  </div>                 
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                    <div class="form-group  wow fadeIn" data-wow-delay="0.30">
                    <textarea class="form-control" rows="15"  placeholder="Omschrijf uw fout zo duidelijk mogelijk en vermeld elk detail." name="bericht" required="required" data-validation-required-message="Please enter a message."></textarea>
                    <p class="help-block text-danger"></p>
                  </div>
                  <div id="success"></div>
                  <button  class="btn btn-outline-info" type="submit">Verstuur</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

        </div>
    </div>
</div>
          