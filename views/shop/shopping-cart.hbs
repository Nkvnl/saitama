<div class="container-fluid" id="cart-bg">
    <div class="container">
        

    <div class="row mt-5 pt-5">
{{# if products }}
        <div class="col-sm-8 col-md-8 mx-auto bg-light p-5"  id="shopping-cart-list" >
            <ul class="list-group">
{{# each products }}
                <div class="thumbnail">
                    <div class="row">
                        <div class="col-md-3">
                            <img  src="{{ item.imagePath }}" alt="..." class="img-fluid">
    
                        </div>
                        <div class="col-md-7">
                        <h3>{{ this.item.title }}</h3>
                        <p class="description">{{ item.descriptionShort }}</p>
                        <div class="clearfix">
                      
                        </div>                            
                        </div>
                        <div class="col-md-2">
                                  <div class="btn-group">
                            <button class="btn btn-outline-info btn-xs dropdown-toggle" type="button" data-toggle="dropdown">{{ this.qty }}<span class="caret"></span></button>
                            <ul class="dropdown-menu ">
                                <li><a href="/reduce/{{this.item._id}}"><i class="fas fa-plus"></i></a></li>
                                <li><a href="/reduce/{{this.item._id}}"><i class="fas fa-minus"></i></a></li>
                                <li><a href="/remove/{{this.item._id}}"><i class="fas fa-trash"></i></a></li>
                            </ul>
                        </div>
                            <div class="price pull-left p-2">€{{ totalPrice }}</div>
                        </div>
                    </div>
                    <hr>
                    <div class="caption">

                    </div>
                </div>
        {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 mx-auto bg-light pb-5 mb-5">
        <div class="col-sm-8 col-md-6 d-inline mb-5" >
            <strong>Totaal: €{{ totalPrice }}</strong>
        </div>
        <div class="col-sm-6 col-md-6 d-inline">
            {{#if login}}
            <button class="btn btn-outline-info"><a href="/checkout">Naar betalen</a></button>
            {{else}}
            <button class="btn btn-outline-info"><a href="/user/signin">Naar inloggen</a></button>
            {{/if}}
        </div>
        </div>
{{ else }}
    </div>
    <div class="row mt-5 bg-white"  style="height:80vh">
        <div class="col-sm-6 col-md-6 mx-auto">
            <h2 class="alert alert-warning mt-5">No Items in Cart</h2>
        </div>
    </div>
{{/if}}
    </div>
</div>

